correct_pin = "1234"
attempts = 0
print("Welcome To Aditya's Small ATM")
while attempts < 3:
    pin = input("Please enter your ATM PIN: ")
    if pin == correct_pin:
        print("Login Successful!\n")
        break
    else:
        attempts += 1
        print("Wrong PIN!")

        if attempts < 3:
            print("Attempts left:", 3 - attempts)
        else:
            print("\nYour card is BLOCKED due to 3 wrong attempts!")
            exit() 

balance = 5000
while True:
    print("\n ATM MENU ")
    print("1. Check Balance")
    print("2. Withdraw")
    print("3. Deposit")
    print("4. Exit")
    ch = input("Enter your choice: ")
    if ch == "1":
        print("Your current balance is:", balance)
    elif ch == "2":
        try:
            amt = float(input("Enter the withdrawal amount: "))
            if amt <= balance:
                balance -= amt
                print("Withdraw successful. Your new balance is :", balance)
            else:
                print("Not enough balance!")
        except ValueError:
            print("Please enter a valid number!")

    elif ch == "3":
        try:
            amt = float(input("Enter deposit amount: "))
            balance += amt
            print("Deposit successful.Your new balance is :", balance)
        except ValueError:
            print("Enter a valid number!")

    elif ch == "4":
        print("Hope to see you again!")
        break

    else:
        print("Invalid choice!")
